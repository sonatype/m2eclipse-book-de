      </site>
    </distributionManagement>
  </profile>
  <profile>
    <id>stage-external</id>
    <distributionManagement>
      <site>
        <id>sonatype-site</id>
        <name>Sonatype Book Examples</name>
        <url>scp://deployer@svn.sonatype.com/var/www/domains/sonatype.com/books/htdocs/m2eclipse-book-stage/</url>
      </site>
    </distributionManagement>
  </profile>
</profiles>
  <dependencies>
